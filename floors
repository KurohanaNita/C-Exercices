#include <iostream>
#include <limits>
#include <iomanip>

using namespace std;

int main() {
    int etage = 0, vraiEtage = 0;
    cout << "eNTREZ éTAGE: " ;
    cin >> etage;

    if (etage < 13) {
        vraiEtage = etage;
        cout << "Vrai étage: " << vraiEtage;
    }
    else if (etage == 13) {
        cerr << "Erreur"
                " etage vaut 13" << endl;
    }
    else { // etage > 13
        vraiEtage = etage - 1;
        cout << "Vrai étage: " << vraiEtage;
    }
}
